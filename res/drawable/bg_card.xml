<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape
            android:dither="true"
            android:shape="rectangle" >
            
            <corners android:radius="2dp" />

            <solid android:color="#EEEEEE" />

            <stroke
                android:width="1px"
                android:color="#dddddd" />

            <padding
                android:bottom="7dp"
                android:left="10dp"
                android:right="10dp"
                android:top="7dp" />
        </shape>
    </item>

</layer-list>