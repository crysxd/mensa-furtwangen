<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/menu_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/bg_card"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:id="@+id/menu_header_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/menu_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/text_empty"
            android:textColor="@color/color_dark_text"
            android:textStyle="bold" />

        <RatingBar
            android:id="@+id/menu_ratingBar"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:numStars="5"
            android:stepSize="1.0" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginBottom="10dp"
        android:background="@color/color_main_style" />

    <TextView
        android:id="@+id/menu_appetizer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_empty"
        android:textColor="@color/color_light_text" />

    <TextView
        android:id="@+id/menu_maincourse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_empty"
        android:textColor="@color/color_dark_text"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/menu_sidedish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_empty"
        android:textColor="@color/color_light_text" />

</LinearLayout>