<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.PrimaryButton" parent="Base.TextAppearance.AppCompat.Widget.Button.Colored">
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="AppTheme.ToolbarBackground">
        <item name="mwhCloseColor">@color/colorPrimary</item>
        <item name="mwhColorAlpha">0.45</item>
        <item name="mwhGradientAngle">45</item>
        <item name="mwhProgress">1</item>
        <item name="mwhStartColor">@color/colorPrimaryDark</item>
        <item name="mwhVelocity">10</item>
        <item name="mwhWaveHeight">20dp</item>
        <item name="mwhWaves">MultiWave</item>
    </style>

</resources>
